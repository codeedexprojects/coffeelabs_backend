{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npm install && npm run build",
    "watchPaths": ["src/**", "package.json"]
  },
  "deploy": {
    "startCommand": "node index.js",
    "runtime": "NODEJS",
    "healthcheckPath": "/",
    "healthcheckTimeout": 30
  },
  "networking": {
    "ports": [
      {
        "port": 8000,
        "protocol": "TCP",
        "public": true
      }
    ]
  }
}